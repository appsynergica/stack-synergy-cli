{
  "name": "@urbanshona/stack-synergy-cli",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Desmond Rgwaringesu",
    "email": "desmondrg@gmail.com"
  },
  "description": "Urban Shona is a mono-repository of tools that stream line the process of creating MyEAN Stack Web Applications",
  "scripts": {
    "debug-repo": "tsc --project tsconfig.json",
    "build-repo": "y run build",
    "build-common-cli": "yarn workspace @urbanshona/common-cli build",
    "build-browsifier": "yarn workspace @urbanshona/browsifier build",
    "build-graphqlsifier": "yarn workspace @urbanshona/graphqlsifier build",
    "publish-browsifier:local": "yarn workspace @urbanshona/browsifier publish:local",
    "publish-browsifier:global": "yarn workspace @urbanshona/browsifier publish:global",
    "publish-graphqlsifier:local": "yarn workspace @urbanshona/graphqlsifier publish:local",
    "publish-graphqlsifier:global": "yarn workspace @urbanshona/graphqlsifier publish:global",
    "publish-common-cli": "yarn workspace @urbanshona/common-cli publish",
    "dev-browsifier": "yarn workspace @urbanshona/browsifier dev",
    "dev-graphqlsifier": "yarn workspace @urbanshona/graphqlsifier dev",
    "test-browsifier": "browsifier -s packages/browsifier/src/server/entities -o packages/browsifier/src/browser/entities -q true",
    "test-graphqlsifier": "graphqlsifier -s packages/graphqlsifier/src/server/entities/*.ts -o packages/graphqlsifier/src/browser/entities"
  },
  "keywords": [
    "cli",
    "nestjs",
    "angular",
    "class validator",
    "TypeORM",
    "Graphql",
    "full stack",
    "command line interface",
    "remove decorators",
    "file generator",
    "nestjs file generator",
    "angular file generator",
    "remove decorators from TypeORM Entities",
    "add decorators",
    "add class validator decorators",
    "add class validator decorators to TypeORM Entities",
    "add NestJS GraphQL \"Code First\"  decorators to TypeORM Entities",
    "generate nestjs files from template",
    "scaffold full stack nestjs and angular project"
  ],
  "repository": "https://github.com/urbanshona/stack-synergy-cli.git",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "main": "dist/index.js",
  "bin": {
    "browsifier": "./index.js"
  },
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
  },
  "workspaces": [
    "packages/*"
  ],
  "funding": [
    {
      "type" : "patreon",
      "url" : "https://www.patreon.com/desmondrg"
    },
    "https://opencollective.com/urbanshona",
    "https://ko-fi.com/desmondrg"
  ]
}
